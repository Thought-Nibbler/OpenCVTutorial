                    <Image x:Name="Image001" Margin="5" />
                </Grid>
            </TabItem>
            <TabItem Header="動画ファイルの読み込み">
                
            </TabItem>
            <TabItem Header="カメラキャプチャ">
                
            </TabItem>
            <TabItem Header="二値化">
                <Grid>
                    <Image x:Name="Image004" Margin="5" />
                </Grid>
            </TabItem>
            <TabItem Header="平滑化">
                <Grid>
                    <Image x:Name="Image005" Margin="5" />
                </Grid>
            </TabItem>
        </TabControl>
        <Button Grid.Row="1" Margin="5" Content="実行" Click="Button_Click" />
    </Grid>
</Window>
